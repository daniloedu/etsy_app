<div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">Listing Management</h1>
    <div class="relative">
        <span class="absolute inset-y-0 left-0 pl-3 flex items-center">
            <span class="material-icons text-gray-400">search</span>
        </span>
        <input type="search" name="search" class="w-full px-4 py-2 border rounded-lg" placeholder="Search listings..." value="{{searchQuery}}"/>
    </div>
</div>

<div class="mb-6">
    <div class="flex space-x-4">
        <button class="px-4 py-2 bg-indigo-100 text-indigo-600 rounded-lg">All Categories</button>
        <button class="px-4 py-2 hover:bg-gray-100 rounded-lg">Home Decor</button>
        <button class="px-4 py-2 hover:bg-gray-100 rounded-lg">Accessories</button>
        <button class="px-4 py-2 hover:bg-gray-100 rounded-lg">Kitchen</button>
    </div>
</div>

<div class="bg-white rounded-lg shadow">
    <table class="min-w-full">
        <thead>
            <tr class="border-b">
                <th class="px-6 py-3 text-left">
                    <input type="checkbox" class="rounded">
                </th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">LISTING</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">PRICE</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">STOCK</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">CATEGORY</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">VIEWS</th>
            </tr>
        </thead>
        <tbody>
            {{#each listings}}
            <tr class="border-b hover:bg-gray-50">
                <td class="px-6 py-4">
                    <input type="checkbox" class="rounded">
                </td>
                <td class="px-6 py-4">{{title}}</td>
                <td class="px-6 py-4">${{price}}</td>
                <td class="px-6 py-4">{{stock}}</td>
                <td class="px-6 py-4">{{category}}</td>
                <td class="px-6 py-4">{{views}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div> 