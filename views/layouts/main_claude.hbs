<!DOCTYPE html>
<html>
<head>
    <title>Etsy Manager</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .tab-item {
            @apply flex items-center px-8 py-5 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-all;
            border-bottom: 3px solid transparent;
        }
        .tab-item.active {
            @apply bg-indigo-50 text-indigo-600 font-medium;
            border-bottom: 3px solid #4f46e5;
        }
        .tab-item i {
            font-size: 1.5rem;
            margin-right: 0.75rem;
        }
        .tab-item span {
            font-size: 1.1rem;
            font-weight: 500;
        }
        .stat-card {
            @apply bg-white p-6 rounded-lg shadow-sm;
        }
        .trend-up {
            @apply text-green-500 text-sm;
        }
        .trend-down {
            @apply text-red-500 text-sm;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="flex flex-col h-screen">
        <!-- Header with Logo and Tabs -->
        <header class="bg-white shadow-sm">
            <div class="flex items-center p-4 border-b border-gray-100">
                <h1 class="text-2xl font-bold text-indigo-600 mr-12">Etsy Manager</h1>
                <nav class="flex flex-1">
                    <a href="/statistics" class="tab-item {{#if isStatistics}}active{{/if}}">
                        <i class="fas fa-chart-bar"></i>
                        <span>Statistics</span>
                    </a>
                    <a href="/orders" class="tab-item {{#if isOrders}}active{{/if}}">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Orders</span>
                    </a>
                    <a href="/listings" class="tab-item {{#if isListings}}active{{/if}}">
                        <i class="fas fa-list"></i>
                        <span>Listings</span>
                    </a>
                </nav>
            </div>
        </header>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto">
            <div class="p-8">
                {{{body}}}
            </div>
        </div>
    </div>

    <!-- JavaScript files -->
    {{#if isListings}}
    <script src="/js/listings.js"></script>
    {{/if}}
    {{#if isOrders}}
    <script src="/js/orders.js"></script>
    {{/if}}
</body>
</html>
