<!DOCTYPE html>
<html>
<head>
    <title>Etsy Manager</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .sidebar {
            width: 12vw;
            min-width: 180px;
        }
        .sidebar-item {
            @apply flex items-center px-6 py-4 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600;
            margin: 2px 0;
        }
        .sidebar-item.active {
            @apply bg-indigo-50 text-indigo-600 font-medium;
        }
        .sidebar-item i {
            font-size: 1.5rem;
            width: 2rem;
            text-align: center;
            margin-right: 1rem;
        }
        .sidebar-item span {
            font-size: 1rem;
        }
        .stat-card {
            @apply bg-white p-6 rounded-lg shadow-sm;
        }
        .trend-up {
            @apply text-green-500 text-sm;
        }
        .trend-down {
            @apply text-red-500 text-sm;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="sidebar bg-white shadow-sm flex flex-col">
            <div class="p-6 border-b border-gray-100">
                <h1 class="text-xl font-bold text-indigo-600">Etsy Manager</h1>
            </div>
            <nav class="flex-1 py-4">
                <a href="/statistics" class="sidebar-item {{#if isStatistics}}active{{/if}}">
                    <i class="fas fa-chart-bar"></i>
                    <span>Statistics</span>
                </a>
                <a href="/orders" class="sidebar-item {{#if isOrders}}active{{/if}}">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Orders</span>
                </a>
                <a href="/listings" class="sidebar-item {{#if isListings}}active{{/if}}">
                    <i class="fas fa-list"></i>
                    <span>Listings</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto">
            <div class="p-8">
                {{{body}}}
            </div>
        </div>
    </div>

    <!-- JavaScript files -->
    {{#if isListings}}
    <script src="/js/listings.js"></script>
    {{/if}}
    {{#if isOrders}}
    <script src="/js/orders.js"></script>
    {{/if}}
</body>
</html> 